Rectangle ::=
  { Width  : Int
    Height : Int
    Spoon  : Text
  }
  where
    bar :: Int -> Int -> Int = lambda x y. x * y

Option ::= forall a. Some a | None

foo :: Rectangle -> Int =
  lambda r. r.Width

main :: Option Int =
  let r =
    { Width: 10; Height: 20; Spoon: "Hi, mom" }
  in
    Some (Rectangle.bar r.Width r.Height)
